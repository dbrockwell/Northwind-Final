@using Northwind.Models
@model Order

<h2 class="mt-3"><i class="far fa-address-card"></i> Checkout</h2>
<br>

<form method="post" asp-action="Order">
    <div asp-validation-summary="All" style="color:red;"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.ShipAddress">Address</label>
            <input asp-for="@Model.ShipAddress" class="form-control" placeholder="Street Address" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.ShipCity">City</label>
            <input asp-for="@Model.ShipCity" class="form-control" placeholder="City" />
        </div>
    </div>
    <br>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.ShipPostalCode">Zip Code</label>
            <input asp-for="@Model.ShipPostalCode" class="form-control" placeholder="Zip Code" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.ShipCountry">Country</label>
            <input asp-for="@Model.ShipCountry" class="form-control" placeholder="Country" />
        </div>
    </div>
    <br>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.ShipRegion">Region</label>
            <input asp-for="@Model.ShipRegion" class="form-control" placeholder="Region" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.ShipName">Ship Name</label>
            <input asp-for="@Model.ShipName" class="form-control" placeholder="Ship Name" />
        </div>
    </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.ShipVia">Ship Via</label> <br>
            <input asp-for="@Model.ShipVia" type="radio" name="shipVia" Value="1"/> Speedy Express <br> <br>
            <input asp-for="@Model.ShipVia" type="radio" name="shipVia" Value="2"/> United Package <br> <br>
            <input asp-for="@Model.ShipVia" type="radio" name="shipVia" Value="3"/> Federal Shipping <br> <br>
        </div>
    <br>
    <button type="submit" class="btn btn-outline-primary">Place Order</button>
</form>
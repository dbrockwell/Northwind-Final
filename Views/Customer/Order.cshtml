@using Northwind.Models
@model Customer

<h2 class="mt-3"><i class="far fa-address-card"></i> Order</h2>
<br>
<button class="btn btn-outline-primary">View Cart</button>

<form>
    <div asp-validation-summary="All" style="color:red;"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Ship Address</label>
            <input class="form-control" placeholder="123 Main Street" />
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input class="form-control" placeholder="Milwaukee" />
        </div>
    </div>
    <br>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Zip Code</label>
            <input class="form-control" placeholder="53094" />
        </div>
        <div class="form-group col-md-6">
            <label>Country</label>
            <input class="form-control" placeholder="United States" />
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-outline-primary">Place Order</button>
</form>